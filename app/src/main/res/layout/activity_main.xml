<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solutionTV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/resultTV"
        android:layout_marginStart="@dimen/outputMargin"
        android:layout_marginTop="@dimen/outputMargin"
        android:layout_marginEnd="@dimen/outputMargin"
        android:layout_marginBottom="@dimen/outputMargin"

        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/NumberBlack"
        android:textSize="@dimen/buttonFont" />

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginStart="@dimen/outputMargin"
        android:layout_marginTop="@dimen/outputMargin"
        android:layout_marginEnd="@dimen/outputMargin"
        android:layout_marginBottom="@dimen/outputMargin"

        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/NumberBlack"
        android:textSize="@dimen/outputFont2" />

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/Background"
        android:id="@+id/buttons_layout">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:text="C"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/AltButtonBackground"
                android:id="@+id/buttonC"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="("
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/NumberBlack"
                android:id="@+id/buttonBracketOpen"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text=")"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/NumberBlack"
                android:id="@+id/buttonBracketClose"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="/"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/AltButtonBackground"
                android:id="@+id/buttonDivide"
                android:layout_margin="@dimen/buttonMargin"



                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="7"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/ButtonBackground"
                android:id="@+id/button7"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="8"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/ButtonBackground"
                android:id="@+id/button8"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="9"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/ButtonBackground"
                android:id="@+id/button9"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="*"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/AltButtonBackground"
                android:id="@+id/buttonMultiply"
                android:layout_margin="@dimen/buttonMargin"



                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="4"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/ButtonBackground"
                android:id="@+id/button4"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="5"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/ButtonBackground"
                android:id="@+id/button5"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="6"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/ButtonBackground"
                android:id="@+id/button6"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="-"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/AltButtonBackground"
                android:id="@+id/buttonMinus"
                android:layout_margin="@dimen/buttonMargin"



                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="1"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/ButtonBackground"
                android:id="@+id/button1"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="2"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/ButtonBackground"
                android:id="@+id/button2"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="3"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/ButtonBackground"
                android:id="@+id/button3"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="+"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/AltButtonBackground"
                android:id="@+id/buttonPlus"
                android:layout_margin="@dimen/buttonMargin"



                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="20dp"
                android:text="ac"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/ButtonBackground"
                android:id="@+id/buttonAC"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="0"
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/ButtonBackground"
                android:id="@+id/button0"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="."
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/ButtonBackground"
                android:id="@+id/buttonDot"
                android:layout_margin="@dimen/buttonMargin"



                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="@dimen/buttonFont"
                android:text="="
                android:textColor="@color/SymbolGreen"
                android:backgroundTint="@color/AltButtonBackground"
                android:id="@+id/buttonEquals"
                android:layout_margin="@dimen/buttonMargin"



                />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>